                                                    <th scope="col" colspan="4" style="text-align:center">Apapa Daily Occupancy Report</th>
                                                </tr>
                                            </thead>
                                            <tfoot>
                                                <tr>
                                                    <th>Total</th>
                                                    <th>@ViewBag.apT</th>
                                                    <th>@ViewBag.apO</th>
                                                    <th>@ViewBag.apP</th>
                                                   
