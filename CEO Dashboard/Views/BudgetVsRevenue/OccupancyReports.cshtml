@model CEO_Dashboard.Models.BudgetModels.MasterMTDDetails
@{
    ViewBag.Title = "OccupancyReports";
    Layout = "~/Views/Shared/_Layout1.cshtml";
  
    var datelabel = DateTime.Parse(Model.EndTime);

}
<h2>Occupancy Reports</h2>
<div class="col-sm-12">

  
    @using (Html.BeginForm("OccupancyReports", "BudgetVsRevenue", FormMethod.Post, new { @class = "card-box", autocomplete = "off" }))
    {

        <div class="form-group">

            <div class="col-sm-3">
                @Html.LabelFor(m => m.StartTime, new { @class = "col-sm-3" })
                @Html.TextBoxFor(m => m.StartTime, new { @class = "datepicker-autoclose  form-control input-sm col-sm-3", @id = "start" })
                @*<span class="input-group-addon bg-custom b-0 text-white"><i class="icon-calender"></i></span>*@
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(m => m.EndTime, new { @class = "col-sm-3" })
                @Html.TextBoxFor(m => m.EndTime, new { @class = "datepicker-autoclose  form-control input-sm col-sm-3", @id = "end" })
                @*<span class="input-group-addon bg-custom b-0 text-white"><i class="icon-calender"></i></span>*@
            </div>

            <br />

            <button type="submit" class="btn btn-default waves-effect waves-light btn-sm">
                Filter
            </button>
         
        </div>

    }
    <h4 style="text-align:center"><span>Mid Night(@String.Format("{0:D}", datelabel))</span></h4>
</div>
<div class="row">
    <div class="col-lg-12">
