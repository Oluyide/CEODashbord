                                            {

                                        <tr>
                                            <td scope="row">@item.PayorNameIPD</td>
                                            <td>@item.PayorCountIPD</td>
                                            <td>@item.RevenueIPD</td>
                                            @*<td>@item.Revenue</td>*@
                                        </tr>
                                                i++;
                                            }
                                        }
                                    </tbody>

                                </table>
