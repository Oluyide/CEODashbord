                                        <tr>
                                            <th>Channel</th>
                                            <th>Pt. Count</th>
                                            <th>Revenue(M) </th>

                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Total</th>
